# Django secret key - change in production
DJANGO_SECRET_KEY=your-secret-key-here

# Database configuration - PostgreSQL
# For local development:
DATABASE_URL=postgres://postgres:postgres@localhost:5432/smartnotes_dev
# Or if using default PostgreSQL user:
# DATABASE_URL=postgresql://localhost/smartnotes_dev

# Google Gemini API configuration
GOOGLE_API_KEY=add_your-google-api-key-here
GEMINI_MODEL=gemini-3-pro

# For production deployment
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: GCP credentials for Vertex AI (production)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GOOGLE_PROJECT_ID=your-gcp-project-id
